<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_png">
    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:tint="@color/white"
        android:src="@drawable/leftarrow"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/t_or_f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="beep"
        android:fontFamily="@font/fredokaone_regular"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/rndmPhrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t_or_f"
        android:gravity="center"
        android:fontFamily="@font/fredokaone_regular"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="beep"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/img6"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:layout_above="@id/completebtn"
        app:lottie_autoPlay="true"
        app:lottie_speed="2"
        android:visibility="invisible"
        app:lottie_fileName="im6.json"
        app:lottie_loop="false" />

    <Button
        android:id="@+id/completebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complete"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto"
        android:background="@drawable/btn_bg"
        android:textAllCaps="false"
        android:textSize="20sp"/>
    </RelativeLayout>
</RelativeLayout>